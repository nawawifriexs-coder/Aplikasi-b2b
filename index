        // Event listener untuk tombol cetak laporan pesanan
        document.getElementById('printOrderReportBtn').addEventListener('click', () => {
            // Data untuk Excel
            const data = [
                ['LAPORAN PESANAN'],
                [''],
                ['ID Pesanan', 'Warung', 'Karyawan', 'Tanggal', 'Total']
            ];
            
