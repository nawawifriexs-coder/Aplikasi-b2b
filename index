        });
        
        // Inisialisasi aplikasi
        document.addEventListener('DOMContentLoaded', () => {
            // Cek status autentikasi saat aplikasi dimuat
            supabase.auth.getUser().then(({ data: { user } }) => {
                if (user) {
                    currentUser = user;
                    updateUIAfterAuth();
                    loadInitialData();
                    showPage('dashboardPage');
                } else {
                    updateUIAfterAuth();
                }
            });
        });
